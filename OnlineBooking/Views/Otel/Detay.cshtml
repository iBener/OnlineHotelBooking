@model OnlineBooking.Models.Otel

@{
    ViewData["Title"] = "Tesis Tanımı - " + ViewBag.Islem;
}

@Html.Partial("_HataMesaji", (string)ViewBag.HataMesaji ?? "")

<h1>@Model.OtelAdi</h1>
<div class="mrg-btm-10">
    @for (int i = 0; i < Model.Yildiz; i++)
    {
        <i class="fa fa-star" style="color:#ffa800"></i>
    }
</div>
<div class="mrg-btm-10"><i class="fa fa-map-marker"></i> @Model.IlAdi, @Model.IlceAdi</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:480px">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/images/la.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/images/chicago.jpg" alt="Chicago">
        </div>

        <div class="item">
            <img src="~/images/ny.jpg" alt="New York">
        </div>

        <div class="item">
            <img src="~/images/beach.jpg" alt="Mexico">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<header>
    <h3>Oda Seçenekleri</h3>
</header>

<div class="row" style="background: #f7f7f7;border: 1px solid #eee;padding: 10px; padding-top:20px; margin-left:0px; max-width:700px">
    <div class="form-group col-sm-5">
        <label for="giris-cikis-tarih">
            Giriş - Çıkış Tarihi
        </label>
        <div>
            <input class="form-control" type="button" id="giris-cikis-tarih" value="11 Mayıs 2017 - 13 Mayıs 2017">
            <i class="fa fa-calendar"></i>
        </div>
    </div>

    <div class="form-group dropdown col-sm-4">
        <label for="oda-misafir">Misafir sayısı</label>
        <button id="oda-misafir" type="button" class="form-control dropdown-toggle" data-toggle="dropdown">1 oda, 2 yetişkin</button>

        <!-- dropdown -->
        <div class="dropdown-menu" id="misafir-secim-dropdown">
            <div id="misafir-oda-secim">
                <div class="header clearfix">
                    Misafir sayısı
                </div>
                <ul id="oda-listesi">
                    <li id="oda-1" class="clearfix" data-oda-id="1">

                    </li>
                </ul>
                <div class="footer">
                    <button class="btn btn-empty">Kapat</button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group col-sm-3">
        <label style="color:white">.</label>
        <div>
            <button type="button" class="btn btn-success btn-search-hotel">
                Oda Bul
                <i class="fa fa-angle-double-right"></i> <i class="fa fa-spin fa-spinner hidden"></i>
            </button>
        </div>
    </div>
</div>
